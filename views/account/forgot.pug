extends ../layout

block content
    .main-content
        h3.main-title Forgot Password
        p.lead Don't worry! It happens to the best of us!
        hr
        
    form.form-horizontal(method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group
            label.col-sm-8.control-label(for='email') Enter your email address below and we will send you password reset instructions.
            .col-sm-8
                input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, required)
        .form-group
            .col-sm-offset-2.col-sm-8
                button.btn.btn-primary(type='submit')
                    i.fa.fa-key
                    | Reset Password
