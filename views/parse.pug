extends layout

block content
    .main-content
        h3.main-title Parse
        p.lead View JSON output of Stanford CoreNLP parsing.
        hr

    form.form-horizontal(method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group
            label(class='col-sm-2 control-label', for='text') Conversation
            .col-sm-8
                textarea.main-textarea.form-control(name='text', id='text', autofocus=true, placeholder='Enter conversation text to parse...', rows=10)
        .form-group
            .col-sm-offset-2.col-sm-8
                button.btn.btn-primary(type='submit')
                    i.fa.fa-envelope
                    | Send
